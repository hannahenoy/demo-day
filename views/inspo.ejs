<!doctype html>
<html>

<head>
  <title>Wedding Planner App</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="/public/playlist.css">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@300;800&display=swap" rel="stylesheet">
</head>

<body>
  <header>
    <h1 class="title">Wedding Planner App ðŸ•Š</h1><br>
    <span> <%= user.local.email%> | </span>
    <a href="/" class="logout">Logout</a>

    <section class="navi">
      <nav>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/playlists" class="btn btn-default btn-sm">Playlists</a>
        <a href="/recording" class="btn btn-default btn-sm">Recordings</a>
        <a href="/" class="btn btn-default btn-sm">Logout</a><br><br>
      </nav>
    </section>
  </header>


  <div class="container">



    <div class="head">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 hide" style="display:none">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %> <br>
                        <strong>email</strong>: <%= user.local.email %> <br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

          <section class="info">
            <h1 class="h1">Wedding Inspiration</h1><br>
            <p>Upload your inspo photos and start curating a moodboard of your vision</p>
          </section>

          <section class="upload">
            <form method="POST" action="/inspo" enctype="multipart/form-data">
              <div>
                  <input type="file" name="profile-file" required/>
              </div>
              <div>
                  <input type="submit" value="Upload" />
              </div>
          </form> 
          </section>

        <h1 id="savedTitle" class="h2"></h1>
        <div class="uploaded">
          <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
              <li class="photo">
                <span id="x"><i id="<%=messages[i]._id%>" class="fa fa-times" aria-hidden="true"></i></span><br>
                <img src="<%= messages[i].src %>">
                <!-- <span><%=messages[i].thumbUp%></span> -->
                <!-- <span id="<%=messages[i]._id%>"></span> -->
                <!-- <span ><i class="fa fa-heart" aria-hidden="true"></i></span> -->
            
              </li>
              <% } %>
          </ul>
        </div>

  <script src="/public/main.js"></script>

</body>

</html>